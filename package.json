{
  "name": "masm-vscode",
  "displayName": "MASM Language VSCode Support",
  "description": "",
  "version": "0.0.4",
  "publisher": "gregoryginzburg",
  "repository": {
    "type": "git",
    "url": "https://github.com/gregoryginzburg/vscode-masm"
  },
  "license": "MIT",
  "icon": "assets/icon1.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onTaskType:masmbuild"
  ],
  "main": "./client/out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.runMasmFile",
        "title": "Run Masm File",
        "icon": "$(debug-start)"
      },
      {
        "command": "extension.debugMasmFile",
        "title": "Debug Masm File",
        "icon": "$(bug)"
      },
      {
        "command": "helloworld.helloWorld",
        "title": "Hello World"
      }
    ],
    "keybindings": [
      {
        "command": "extension.debugMasmFile",
        "key": "F5",
        "when": "editorLangId == masm"
      },
      {
        "command": "extension.runMasmFile",
        "key": "ctrl+F5",
        "when": "editorLangId == masm"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "extension.runMasmFile",
          "when": "resourceLangId == masm",
          "group": "navigation"
        },
        {
          "command": "extension.debugMasmFile",
          "when": "resourceLangId == masm",
          "group": "navigation"
        }
      ]
    },
    "languages": [
      {
        "id": "masm",
        "aliases": [
          "MASM",
          "masm"
        ],
        "extensions": [
          ".asm",
          ".masm"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "masm",
        "scopeName": "source.masm",
        "path": "./syntaxes/masm.tmLanguage.json"
      }
    ],
    "breakpoints": [
      {
        "language": "masm"
      }
    ],
    "debuggers": [
      {
        "type": "masmdbg",
        "label": "MASM Debugger",
        "windows": {
          "program": "./bin/MasmDebugAdapter.exe"
        },
        "languages": [
          "masm"
        ],
        "configurationAttributes": {
          "launch": {
            "properties": {
              "program": {
                "type": "string",
                "description": "The program executable to debug",
                "default": "${workspaceFolder}/${fileBasenameNoExtension}.exe"
              },
              "args": {
                "type": "array",
                "description": "Command line arguments",
                "items": {
                  "type": "string"
                },
                "default": []
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "name": "Debug MASM Program",
            "type": "masmdbg",
            "request": "launch",
            "program": "${workspaceFolder}/${fileBasenameNoExtension}.exe",
            "preLaunchTask": "Build"
          }
        ]
      }
    ],
    "configuration": {
      "type": "object",
      "title": "MASM Extension Settings",
      "properties": {
        "masmLanguageServer.secondaryLabelSeverity": {
          "type": "string",
          "enum": [
            "information",
            "hint"
          ],
          "default": "information",
          "description": "Severity level for secondary labels in diagnostics."
        },
        "masmLanguageServer.enableDiagnostics": {
          "type": "boolean",
          "default": true,
          "description": "Enable diagnostics"
        },
        "masm.compilerPath": {
          "type": "string",
          "default": "ml.exe",
          "description": "Path to the MASM compiler (e.g., ml.exe)."
        },
        "masm.linkerPath": {
          "type": "string",
          "default": "link.exe",
          "description": "Path to the linker (e.g., link.exe)."
        },
        "masm.includePaths": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "List of include directories passed to the compiler."
        },
        "masm.libPaths": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "List of library directories passed to the linker."
        }
      }
    },
    "taskDefinitions": [
      {
        "type": "masmbuild",
        "required": [
          "files",
          "output"
        ],
        "properties": {
          "files": {
            "type": "array",
            "items": {
              "type": "string",
              "pattern": "^((?:[a-zA-Z]:\\\\|/)?(?:[^\\s\\\\/?:*\"<>\\|]+[/\\\\])*[^\\s\\\\/?:*\"<>\\|]+|(\\$\\{[^\\}]+\\}))$"
            },
            "description": "List of .asm files to compile. All files names must use only ASCII characters and be in the ${workspaceFolder}"
          },
          "output": {
            "type": "string",
            "pattern": "^((?:[a-zA-Z]:\\\\|/)?(?:[^\\s\\\\/?:*\"<>\\|]+[/\\\\])*[^\\s\\\\/?:*\"<>\\|]+|(\\$\\{[^\\}]+\\}))$",
            "description": "Name of the .exe output file. Must use only ASCII characters and be in the ${workspaceFolder}"
          },
          "compilerArgs": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Extra compiler arguments."
          },
          "linkerArgs": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Extra linker arguments."
          }
        }
      }
    ],
    "problemMatchers": [
      {
        "name": "masm-problem-matcher",
        "owner": "masm",
        "fileLocation": [
          "relative", "${workspaceFolder}"
        ],
        "pattern": {
          "regexp": "^(.*)\\((\\d+)\\)\\s*:\\s*(warning|(?:fatal\\s*)?error)\\s*(A\\d+):\\s*(.*)$",
          "file": 1,
          "line": 2,
          "severity": 3,
          "code": 4,
          "message": 5
        },
        "source": "masm-compiler"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "lint": "eslint",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
    "test": "sh ./scripts/e2e.sh"
  },
  "devDependencies": {
    "@types/node": "22.10.2",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.7.2"
  }
}