{
  "name": "masm",
  "displayName": "MASM",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.runMasmFile",
        "title": "Run Masm File",
        "icon": "$(debug-start)"
      },
      {
        "command": "extension.debugMasmFile",
        "title": "Debug Masm File",
        "icon": "$(bug)"
      },
      {
        "command": "helloworld.helloWorld",
        "title": "Hello World"
      }
    ],
    "keybindings": [
      {
        "command": "extension.debugMasmFile",
        "key": "F5",
        "when": "editorLangId == masm"
      },
      {
        "command": "extension.runMasmFile",
        "key": "ctrl+F5",
        "when": "editorLangId == masm"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "extension.runMasmFile",
          "when": "resourceLangId == masm",
          "group": "navigation"
        },
        {
          "command": "extension.debugMasmFile",
          "when": "resourceLangId == masm",
          "group": "navigation"
        }
      ]
    },
    "languages": [
      {
        "id": "masm",
        "aliases": [
          "MASM",
          "masm"
        ],
        "extensions": [
          ".asm",
          ".masm"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "masm",
        "scopeName": "source.masm",
        "path": "./syntaxes/masm.tmLanguage.json"
      }
    ],
    "breakpoints": [
      {
        "language": "masm"
      }
    ],
    "debuggers": [
      {
        "type": "masm",
        "label": "MASM Debugger",
        "windows": {
          "program": "./bin/MasmDebugAdapter.exe"
        },
        "languages": [
          "masm"
        ],
        "configurationAttributes": {
          "launch": {
            "properties": {
              "program": {
                "type": "string",
                "description": "The program executable to debug",
                "default": "${workspaceFolder}/${fileBasenameNoExtension}.exe"
              },
              "args": {
                "type": "array",
                "description": "Command line arguments",
                "items": {
                  "type": "string"
                },
                "default": []
              },
              "stopOnEntry": {
                "type": "boolean",
                "description": "Stop at the entry point of the program",
                "default": false
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "name": "Debug MASM Program",
            "type": "masm",
            "request": "launch",
            "program": "${workspaceFolder}/${fileBasenameNoExtension}.exe",
            "stopOnEntry": true
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "dependencies": {
    "typescript": "^5.6.3",
    "@types/vscode": "^1.1.37",
    "vscode-languageclient": "^7.0.0",
    "vscode-languageserver": "^7.0.0",
    "vscode-languageserver-textdocument": "^1.0.1"
  },
  "devDependencies": {
    "@types/node": "^22.7.9"
  }
}